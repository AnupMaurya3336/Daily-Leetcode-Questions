633. Sum of Square Numbers


class Solution {
    public boolean judgeSquareSum(int c) {
        int a=0;
        int b= (int)Math.sqrt(c);
        while(a<=b){
            long sum=(long)a*a+(long)b*b;  //data bahut bada hai to ham integer me store nhi ker sakte hai
            if(sum==c){
                return true;
            }
            else if(sum>c){
                b--;

            }else{
                a++;
            }
        }
        return false; 
    }
}
