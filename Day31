// 28. Find the Index of the First Occurrence in a String

class Solution {
    public int strStr(String haystack, String needle) {
        int n = haystack.length();
        int m = needle.length();

      
        for (int i = 0; i <= n - m; i++) {
            // Check if substring matches the needle
            if (haystack.substring(i, i + m).equals(needle)) {
                return i; 
            }
        }
        
    
        return -1;
    }
}
