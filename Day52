//2220. Minimum Bit Flips to Convert Number

class Solution {
    public int minBitFlips(int start, int goal) {
        int xor=start^goal;  // ye batata hai ki kitne bit change hai
        int count=0;
        while (xor > 0) {
            if ((xor & 1) == 1) { // agar last bit 1 hai
                count++;
            }
            xor = xor >> 1; // next bit check
        }
        
        return count; // total different bits = total flips
        
    }
}
