// 1513. Number of Substrings With Only 1s

class Solution {
    public int numSub(String s) {
        long ans=0l;
        long count=0l;
        long mod = 1000000007l;
        for(int i=0;i<s.length();i++){
            if(s.charAt(i) == '1'){
                count += 1;
                ans = ( ans  + count)%mod;
            }else{
                count=0;
            }

        }
        return (int)(ans);
    }
}
