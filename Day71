//  2221. Find Triangular Sum of an Array


class Solution {
    public int triangularSum(int[] nums) {
        int n=nums.length;
        while(n>1){
        int [] arr=new int[n-1];
            for(int i=0;i<n-1;i++){
                int rem=nums[i]+nums[i+1];
                arr[i]=rem%10;
            }
            nums=arr;
            n--;
        }
        return nums[0];
    }
}
