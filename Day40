// 1716. Calculate Money in Leetcode Bank

class Solution {
    public int totalMoney(int n) {
        int monday_money=1;
        int sum=0;
        while(n>0){
            int money=monday_money;
            for(int i=1;i<=Math.min(7,n);i++){
                sum+=money;
                money++;
            }
            n=n-7;
            monday_money++;
        }
        return sum;
        
    }
}
