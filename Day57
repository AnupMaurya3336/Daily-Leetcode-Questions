// 2654. Minimum Number of Operations to Make All Array Elements Equal to 1


import java.math.BigInteger;  //gcd ka use kerne ke liye isko import kerna hi hoga

class Solution {
    public int minOperations(int[] nums) {
        int n=nums.length;
        int count1=0;
        for(int i=0;i<n;i++){
            if(nums[i]==1){
                count1+=1;
            }
        }
        if(count1>0){
            return n-count1;
        }
        int ans=0;
        int oper=Integer.MAX_VALUE;

        for(int i=0;i<n-1;i++){
            int gcd=nums[i];
            for(int j=i+1;j<n;j++){
                gcd=BigInteger.valueOf(gcd).gcd(BigInteger.valueOf(nums[j])).intValue();  // bas gcd nikal rhe hai
                if(gcd==1){
                    oper=Math.min(oper,j-i);
                    break;

                }
            }
        }
        if(oper== Integer.MAX_VALUE)  return -1;  //if oper me koi change nhi hua to return -1 hoga

        return oper+(n-1);
    }
}
