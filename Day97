// 1877. Minimize Maximum Pair Sum in Array

class Solution {
    public int minPairSum(int[] nums) {
        int n=nums.length;
        int [] arr=new int[n/2];
        Arrays.sort(nums);
        for(int i=0;i<n/2;i++){
            arr[i]=nums[i]+nums[n-i-1];
        }
        int max=-1;
        for(int i=0;i<arr.length;i++){
            max=Math.max(arr[i],max);
        }
        return max;
        
    }
}
