//  881.Boats to Save People

class Solution {
    public int numRescueBoats(int[] people, int limit) {
        Arrays.sort(people);
        int n = people.length - 1;
        int count = 0;
        int i = 0;
        while (i <= n) {

            if (people[i] + people[n] <= limit) {  // ham isame sabse bhari ko pahle hi boat me bitha dege
                i++;
            }
            
            n--;
            count++;

        }
        return count;

    }
}
