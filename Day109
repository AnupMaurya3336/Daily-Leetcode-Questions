// 3379. Transformed Array


class Solution {
    public int[] constructTransformedArray(int[] nums) {
        int n=nums.length;
        int arr []=new int[n];
        for(int i=0;i<n;i++){
            int rem=nums[i]%n;
            int newidx=(i+rem)%n;
            if(newidx<0){
                newidx+=n;
                 
            } 
            arr[i]=nums[newidx];

        }
        return arr;
        
    }
}
